# =============================================================================
# Crawl4AI MCP Server Configuration
# =============================================================================
# Copy this file to .env and configure as needed
# =============================================================================

# -----------------------------------------------------------------------------
# Transport Configuration
# -----------------------------------------------------------------------------

# Transport mode for MCP communication
# Options: stdio (default), sse
TRANSPORT=stdio

# Port for SSE transport (only used when TRANSPORT=sse)
SSE_PORT=8000

# -----------------------------------------------------------------------------
# Browser Configuration
# -----------------------------------------------------------------------------

# Run browser in headless mode (recommended for server environments)
HEADLESS=true

# Browser type to use
# Options: chromium (default), firefox, webkit
BROWSER_TYPE=chromium

# User agent string (optional, uses browser default if not set)
# USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Viewport dimensions (optional)
# VIEWPORT_WIDTH=1920
# VIEWPORT_HEIGHT=1080

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------

# Mean delay between requests in seconds (helps avoid rate limiting)
MEAN_DELAY=0.5

# Maximum concurrent crawl operations
MAX_CONCURRENT=5

# Request timeout in seconds
# REQUEST_TIMEOUT=30

# -----------------------------------------------------------------------------
# RAG Features (Optional)
# -----------------------------------------------------------------------------
# These are only required if you want to use the search_crawled_content tool
# for semantic search over previously crawled content.

# OpenAI API key for embeddings (required for RAG)
OPENAI_API_KEY=

# Supabase configuration (required for RAG vector storage)
SUPABASE_URL=
SUPABASE_SERVICE_KEY=

# Embedding model to use (optional, defaults to text-embedding-3-small)
# EMBEDDING_MODEL=text-embedding-3-small

# -----------------------------------------------------------------------------
# LLM Extraction (Optional)
# -----------------------------------------------------------------------------
# These are only required if you want to use the extract_with_llm tool

# OpenAI API key (same as RAG, listed again for clarity)
# OPENAI_API_KEY=

# LLM model for extraction (optional, defaults to gpt-4o-mini)
# LLM_MODEL=gpt-4o-mini

# -----------------------------------------------------------------------------
# Caching Configuration (Optional)
# -----------------------------------------------------------------------------

# Enable response caching
# CACHE_ENABLED=false

# Cache directory (optional, uses system temp if not set)
# CACHE_DIR=/tmp/crawl4ai-cache

# Cache TTL in seconds
# CACHE_TTL=3600

# -----------------------------------------------------------------------------
# Logging Configuration (Optional)
# -----------------------------------------------------------------------------

# Log level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# Log format (optional)
# LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# -----------------------------------------------------------------------------
# Proxy Configuration (Optional)
# -----------------------------------------------------------------------------

# HTTP proxy URL
# HTTP_PROXY=http://proxy.example.com:8080

# HTTPS proxy URL
# HTTPS_PROXY=https://proxy.example.com:8080

# Proxy authentication (if required)
# PROXY_USERNAME=
# PROXY_PASSWORD=
