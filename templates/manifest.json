{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Claude Code Base Template Manifest",
  "description": "Defines which files to copy and how to selectively configure new projects from this template",
  "version": "2.0.0",

  "include": [
    ".claude/",
    ".vscode/",
    ".github/",
    ".gitignore",
    ".gitattributes",
    ".pre-commit-config.yaml",
    "CONTRIBUTING.md",
    "SECURITY.md",
    "CODEOWNERS",
    "LICENSE"
  ],

  "exclude": [
    ".git/",
    "node_modules/",
    "__pycache__/",
    ".venv/",
    "venv/",
    ".env",
    ".env.*",
    "!.env.example",
    "*.log",
    "*.tmp",
    "temp/",
    "bin/",
    "obj/",
    "dist/",
    "build/",
    "coverage/",
    ".nyc_output/"
  ],

  "neverCopy": [
    "mcp-servers/",
    "templates/",
    "tests/",
    "docs/",
    "scripts/setup-claude-code-project.ps1",
    "scripts/deploy-mcp-servers.ps1",
    "scripts/install-mcp-servers.ps1",
    "scripts/stats.ps1",
    "CHANGELOG.md"
  ],

  "customize": {
    "README.md": {
      "action": "replace",
      "source": "templates/readme/{{PROJECT_TYPE}}.md",
      "variables": [
        "{{PROJECT_NAME}}",
        "{{PROJECT_DESCRIPTION}}",
        "{{ORG}}",
        "{{LANGUAGE}}",
        "{{FRAMEWORK}}"
      ]
    },
    "CLAUDE.md": {
      "action": "replace",
      "source": "templates/claude-md/CLAUDE.md.template",
      "note": "Generated from template with conditional sections based on dev frameworks"
    },
    "CODEOWNERS": {
      "action": "update",
      "replacements": {
        "@HouseGarofalo/maintainers": "@{{ORG}}/maintainers"
      }
    }
  },

  "postCopy": {
    "gitInit": true,
    "preCommitInstall": true,
    "createGitHubRepo": true,
    "createArchonProject": true
  },

  "projectTypes": {
    "web-frontend": {
      "description": "React, Vue, Angular, or other frontend framework",
      "additionalGitignore": "templates/gitignore/node.gitignore",
      "readme": "templates/readme/web-frontend.md"
    },
    "backend-api": {
      "description": "Node.js, Python, .NET, or other backend framework",
      "additionalGitignore": "auto-detect",
      "readme": "templates/readme/backend-api.md"
    },
    "fullstack": {
      "description": "Combined frontend and backend application",
      "additionalGitignore": "templates/gitignore/node.gitignore",
      "readme": "templates/readme/fullstack.md"
    },
    "cli-library": {
      "description": "CLI tools or reusable packages/libraries",
      "additionalGitignore": "auto-detect",
      "readme": "templates/readme/cli-library.md"
    },
    "infrastructure": {
      "description": "Terraform, Docker, Kubernetes, or other IaC",
      "additionalGitignore": null,
      "readme": "templates/readme/infrastructure.md"
    }
  },

  "projectTypeMapping": {
    "web-frontend": ["core", "frontend"],
    "backend-api": ["core", "backend"],
    "fullstack": ["core", "frontend", "backend"],
    "cli-library": ["core"],
    "infrastructure": ["core", "cloud_infra"]
  },

