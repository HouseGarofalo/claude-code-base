# ============================================================================
# Claude Code Base - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# NEVER commit .env files with real values to version control!
# ============================================================================

# ============================================================================
# REQUIRED - Core Settings
# ============================================================================

# Application environment: development | staging | production
NODE_ENV=development

# Application port
PORT=3000

# ============================================================================
# AUTHENTICATION (if using auth features)
# ============================================================================

# JWT Configuration
# Generate secret: openssl rand -base64 32
JWT_SECRET=your-256-bit-secret-here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# OAuth Providers (optional)
# Google OAuth - https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth - https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Microsoft OAuth - https://portal.azure.com/
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# ============================================================================
# DATABASE
# ============================================================================

# PostgreSQL Connection
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Redis Connection (for sessions, caching)
REDIS_URL=redis://localhost:6379

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# OpenAI API (for AI features)
OPENAI_API_KEY=

# Azure OpenAI (alternative to OpenAI)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=

# Anthropic Claude
ANTHROPIC_API_KEY=

# ============================================================================
# ARCHON MCP SERVER (for task management)
# ============================================================================

# Archon server URL (default: http://localhost:8051)
ARCHON_URL=http://localhost:8051

# Supabase connection (if using Archon with Supabase)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# Log level: debug | info | warn | error
LOG_LEVEL=info

# Sentry error tracking (optional)
SENTRY_DSN=

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable features
ENABLE_MFA=true
ENABLE_OAUTH=true
ENABLE_AUDIT_LOG=true

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================

# Enable debug mode (never in production!)
DEBUG=false

# Disable SSL verification (dev only!)
NODE_TLS_REJECT_UNAUTHORIZED=1
